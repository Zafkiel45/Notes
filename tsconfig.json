{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "module": "ES6",
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./app/js"
  },
  "include": ["app/**/*"],
  "exclude": ["**/*.spec.ts"]
}