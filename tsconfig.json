{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    /* Language and Environment */
    "target": "es2016",
    /* Modules */
    "module": "ES6",
    "esModuleInterop": true,
    // "preserveSymlinks": true,              
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./app/js"
  },
  "include": ["app/**/*"],
  "exclude": ["**/*.spec.ts"]
}